<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ToggleButton
        android:id="@+id/modeToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Place Ships"
        android:textOn="Mark Hits"
        android:layout_margin="16dp"
        android:checked="false"/>

    <Spinner
        android:id="@+id/shipSizeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/modeToggle"
        android:layout_marginTop="16dp"
        android:entries="@array/ship_sizes"/>

    <ToggleButton
        android:id="@+id/orientationToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shipSizeSpinner"
        android:layout_marginTop="16dp"
        android:checked="false"
        android:textOff="Horizontal"
        android:textOn="Vertical" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/orientationToggle"
        android:layout_centerHorizontal="true"
        android:columnCount="8"
        android:rowCount="8"
        android:padding="16dp">

        <!-- Cells will be added dynamically from code -->

    </GridLayout>

</RelativeLayout>
